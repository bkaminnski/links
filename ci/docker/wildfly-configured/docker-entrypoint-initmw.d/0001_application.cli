embed-server --std-out=echo --server-config=standalone-full.xml

module add --name=org.postgres --resources=/jdbc-drivers/postgresql-9.4.1211.jar --dependencies=javax.api,javax.transaction.api
/subsystem=datasources/jdbc-driver=postgres:add(driver-name="postgres",driver-module-name="org.postgres",driver-class-name=org.postgresql.Driver)

data-source add --jndi-name=java:jboss/datasources/application --name=applicationDS --connection-url=jdbc:postgresql://postgres-configured:5432/application --driver-name=postgres --user-name=application --password=applicationsecretpassword

jms-topic add --topic-address=linksTopic --entries=topic/links,java:jboss/exported/jms/topic/links

stop-embedded-server